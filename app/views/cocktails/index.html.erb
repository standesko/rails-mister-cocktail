<div class="banner-content">
  <h1>Miagani's cocktails</h1>
  <p>Awesome beverages for superheros fans (& sous-dou√©s fans obvi)</p>
  <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
</div>

<div class="d-flex justify-center">
  <div class="row">
    <% @cocktails.sort.each do |cocktail| %>
      <div class="col-sm-4 col-6">
        <div class="card align-middle m-3 ">
          <% if cocktail.photo.attached? %>
            <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
          <% else  %>
            No Picture
          <% end %>
          <div class="card-body text-center">
            <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail) %></h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
